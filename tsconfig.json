{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["jest", "node"],
    "jsx": "react",
    "strictFunctionTypes": false,
    "paths": {
      "@atoms": ["src/components/Atoms/index.ts"],
      "@molecules": ["src/components/Molecules/index.ts"],
      "@organisms": ["src/components/Organisms/index.ts"],
      "@theme": ["src/theme/index.ts"]
    }
  },
  "files": [
    "src/components/Atoms/Button/index.ts",
    "src/components/Atoms/Button/DangerButton.tsx",
    "src/components/Atoms/Button/DarkButton.tsx",
    "src/components/Atoms/Button/InfoButton.tsx",
    "src/components/Atoms/Button/LightButton.tsx",
    "src/components/Atoms/Button/PrimaryButton.tsx",
    "src/components/Atoms/Button/SuccessButton.tsx",
    "src/components/Atoms/Button/WarningButton.tsx",
    "src/Accordion/index.tsx",
    "src/Alert/index.tsx",
    "src/Badge/index.tsx",
    "src/Breadcrumbs/index.tsx",
    "src/EntryBlock/index.tsx",
    "src/Center/index.tsx",
    "src/Checkbox/index.tsx",
    "src/File/index.tsx",
    "src/Icon/index.tsx",
    "src/Input/index.tsx",
    "src/Modal/index.tsx",
    "src/Menu/index.tsx",
    "src/Pagination/index.tsx",
    "src/Placeholder/index.tsx",
    "src/Radio/index.tsx",
    "src/RenderIf/index.tsx",
    "src/Retina/index.tsx",
    "src/Select/index.tsx",
    "src/Steps/index.tsx",
    "src/Spinner/index.tsx",
    "src/Table/index.tsx",
    "src/Tags/index.tsx",
    "src/TextArea/index.tsx",
    "src/TextCounter/index.tsx",
    "src/Toggle/index.tsx"
  ],
  "include": ["src/**/*", "sandbox/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
